<!DOCTYPE html>
<html>
  <head>
    <title>BookMyShowDemo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'application', 'custom' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <div class="container mt-5">
    <div class="row justify-content-end">
      <div class="col-auto button-container">
        <% if current_user.present? %>
          <%= button_to("Log Out", destroy_user_session_path, method: :delete, class: 'btn btn-danger my-2') %>
          <%= link_to "Show Bookings", user_ticket_bookings_path, class: 'btn btn-primary' %>
        <% else %>
          <%= link_to "Sign Up / Sign In", new_user_session_path, class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
    <% flash.each do |key, message| %>
      <div class="alert mt-2 <%= key == 'notice' ? 'alert-success' : 'alert-danger' %>" role="alert">
        <%= message %>
      </div>
    <% end %>
  </div>
  <%= yield %>
</body>

</html>
